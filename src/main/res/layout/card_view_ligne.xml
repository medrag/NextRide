<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/ligneCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardElevation="3dp"
    android:layout_margin="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >
    <!-- Begin    Root Layout   -->
    <LinearLayout
        android:id="@+id/cardViewRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- Begin    1st Layout   -->
        <LinearLayout
            android:id="@+id/cardViewItem"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <ImageView
                android:id="@+id/transpIcone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/typeTransp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight=".60"
                android:fontFamily="@font/opensans_regular"
                android:layout_gravity="center"
                android:textAlignment="center"
                />


            <TextView
                android:id="@+id/transpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="italic|bold"
                android:layout_weight=".20"
                android:textAlignment="center"
                android:layout_marginRight="3dp"
                />
        </LinearLayout>
        <!-- End    1st Layout   -->

        <!-- Begin    2nd Layout   -->
        <LinearLayout
            android:id="@+id/cardViewItem2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stationTextView_1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:fontFamily="@font/opensans_regular"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <!-- Begin    Layout in the Middle     -->
            <LinearLayout
                android:id="@+id/cardViewLayout2Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@drawable/linear_layout_border"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:src="@drawable/ic_arrow_up"
                    />

                <TextView
                    android:id="@+id/betweenTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="Vers"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_weight=".60"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:src="@drawable/ic_arrow_down"
                    />
            </LinearLayout>
            <!-- End    Layout in the Middle     -->

            <TextView
                android:id="@+id/stationTextView_2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:fontFamily="@font/opensans_regular"
                android:textStyle="bold"
                />
        </LinearLayout>
        <!-- End    2nd Layout   -->

    </LinearLayout>
    <!-- End    Root Layout   -->



</android.support.v7.widget.CardView>